---
import Layout from '../layouts/Layout.astro';
import Menu from '../components/Menu.astro';
---

<Layout title="pin">
  <Menu />
  <main class="container mx-auto p-4">
    <h1 class="headline-large mb-4">pin</h1>
    <p class="mb-4">This is the Pin page.</p>
    
    <a href="/pin/i" class="inline-flex items-center text-blue-500 hover:text-blue-700 mb-2">
      <span class="mr-2">All Products</span>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
      </svg>
    </a>
    
    <a href="/pin/attributes" class="inline-flex items-center text-blue-500 hover:text-blue-700">
      <span class="mr-2">Pin Attributes</span>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
      </svg>
    </a>
  </main>
</Layout>

<style>
  .headline-large {
    font-size: 2rem;
    font-weight: bold;
  }
</style>
